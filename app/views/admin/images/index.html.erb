<h1>Listing Images</h1>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Type</th>
      <th>Width</th>
      <th>Height</th>
      <th>Name</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><img src="data:image/jpg;base64,<%= image.base64_string %>" height="60" /></td>
        <td><%= display_image_type(image) %></td>
        <td><%= image.width %></td>
        <td><%= image.height %></td>
        <td><%= image.name %></td>
        <td><%= image.tags %></td>
        <td><%= link_to 'Show', admin_image_path(image) %></td>
        <td><%= link_to 'Edit', edit_admin_image_path(image) %></td>
        <td><%= link_to 'Destroy', admin_image_path(image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= simple_form_for([:admin, @image]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type, as: :select, :collection => [["Webclip Icon", "WebclipIcon"], ["Portal Image", nil]], :include_blank => false %>
    <%= f.input :base64_string %>
    <%= f.input :width %>
    <%= f.input :height %>
    <%= f.input :name %>
    <%= f.input :tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

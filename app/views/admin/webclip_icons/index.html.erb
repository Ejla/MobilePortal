
<div class="row">
  <div class="col-sm-6">
    <h1>Media Library</h1><br/>
  </div>
  <div class="col-sm-6">
    <p class="push-right-sm"><%= link_to 'Create New Webclip Icon', new_admin_webclip_icon_path, class: 'btn btn-default' %></p>
  </div>
</div>
<br/>

<table class="table">
  <thead>
    <tr>
      <th>Webclip Icon</th>
      <th>Name</th>
      <th>Type</th>
      <th>Width</th>
      <th>Height</th>
      
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td>
          <%= link_to [:edit_admin, image] do %>
          <img src="<%= image.base64_string %>" height="60" />
          <% end %>
        </td>
        <td><%= image.name %></td>
        <td><%= display_image_type(image) %></td>
        <td><%= image.width %></td>
        <td><%= image.height %></td> 
        <td><%= image.tags %></td>
        <td><%= link_to 'Show',   [:admin, image] %></td>
        <td><%= link_to 'Edit',   [:edit_admin, image] %></td>
        <td><%= link_to 'Delete', [:admin, image], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Webclip Icon', :new_admin_webclip_icon, class: 'btn btn-default' %>

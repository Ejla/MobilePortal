<div class="row">
  <div class="col-sm-9 col-sm-offset-3">
    <h1>Webclip Icon #<%= @image.id %></h1>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-sm-3 show_label">Name:</div>
  <div class="col-sm-9"><%= @image.name %></div>
</div>
<br/>
<div class="row">
  <div class="col-sm-3 show_label">Preview:</div>
  <div class="col-sm-9">
    <%= image_base_64_tag @image, style: "max-width: 100%" %>
  </div>
</div>
<br/>
<div class="row">
  <div class="col-sm-3 show_label">Tags:</div>
  <div class="col-sm-9"><%= @image.tags %></div>
</div>
<br/>
<div class="row">
  <div class="col-sm-3 show_label">Width:</div>
  <div class="col-sm-9"><%= @image.width %> px</div>
</div>
<br/>
<div class="row">
  <div class="col-sm-3 show_label">Height:</div>
  <div class="col-sm-9"><%= @image.height %> px</div>
</div>
<br/>
<div class="row">
  <div class="col-sm-9 col-sm-offset-3">
    <%= link_to 'Edit This Image', edit_admin_webclip_icon_path(@image), class: "btn btn-default" %> &nbsp;<%= link_to 'Delete', admin_webclip_icon_path(@image), class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<br/>
<div class="links">
<%= link_to 'View All Images', admin_webclip_icons_path %>
</div>
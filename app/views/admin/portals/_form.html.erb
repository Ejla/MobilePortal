<%= simple_form_for([:admin, @portal]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :logo_image_id %>
    <%= f.input :layout, :collection => ["thumbs", "list"] %>
    <%= f.input :theme, :collection => ["default", "mocca", "navy_dark"], :selected => "default" %>
    <%= f.input :font, :collection => ["'Open Sans', sans-serif", "'Droid Serif', serif"], :selected => [0] %>
    <hr/>
    <h4>Custom styles (will override styles of selected theme)</h4>
    <%= f.input :bg_css %>
    <%= f.input :bg_image_id %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

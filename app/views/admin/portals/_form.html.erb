<%= simple_form_for([:admin, @portal]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :logo_image_id %>
    <%= f.input :bg_css %>
    <%= f.input :bg_image_id %>
    <%= f.input :layout %>
    <%= f.input :font %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<h2>Page Name: <%= @page.name %></h2>
<br/>

<ul class="page_show">
  <% @page.webclips.each do |webclip| %>
      <li>
        <div>
          <%= image_base_64_tag(webclip.webclip_icon)%>
          <h5><%= webclip.name %></h5>
        </div>
        <p>
        <%= link_to 'Edit', edit_admin_webclip_path(webclip) %>
        <%= link_to "Remove", remove_webclip_admin_page_path(@page, webclip), data: { confirm: 'Are you sure?' } %>
        </p>
      </li>
      
  <% end %>
</ul>

<div class="links">
<%= link_to 'Edit Page', edit_admin_page_path(@page) %> |
<%= link_to 'View All Pages', admin_pages_path %>
</div>
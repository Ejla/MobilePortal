<div class="row">
  <div class="col-sm-6">
    <h1>All Pages</h1><br/>
  </div>
  <div class="col-sm-6">
    <p class="push-right-sm"><%= link_to 'Create New Page', new_admin_page_path, class: 'btn btn-default' %></p>
  </div>
</div>
<br/>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Webclip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><h4><%= link_to page.name, edit_admin_page_path(page) %><h4></td>
        <td><%= page.webclips.map(&:name).join(', ') %></td>
        <td><%= link_to 'Show', admin_page_path(page) %></td>
        <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
        <td><%= link_to 'Delete', admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Page', new_admin_page_path, class: 'btn btn-default' %>
